<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="behat3_symfony_extension.logger.full_path">%behat.paths.base%/behat3_symfony_extension.logger.path</parameter>
    </parameters>
    <services>
        <service id="behat3_symfony_extension.logger.handler" class="Monolog\Handler\StreamHandler">
            <argument>%behat3_symfony_extension.logger.full_path%</argument>
            <argument>%behat3_symfony_extension.logger.level%</argument>
        </service>
        <service id="behat3_symfony_extension.logger" class="Monolog\Logger">
            <argument>behat</argument>
            <call method="pushHandler">
                <argument type="service" id="behat3_symfony_extension.logger.handler"/>
            </call>
        </service>
        <service
                id="behat3_symfony_extension.logger.sf_kernel_logger"
                class="Yoanm\Behat3SymfonyExtension\Logger\SfKernelEventLogger"
        >
            <argument type="service" id="behat3_symfony_extension.kernel"/>
            <tag name="event_dispatcher.subscriber"/>
        </service>
    </services>
</container>

