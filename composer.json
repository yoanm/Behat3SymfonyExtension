{
  "name": "yoanm/behat3-symfony-extension",
  "description": "Symfony extension for Behat V3",
  "keywords": ["Behat3", "Symfony"],
  "type": "library",
  "license": "MIT",
  "version": "0.2.0",
  "authors": [
    {
      "name": "yoanm",
      "email": "yoanm@users.noreply.github.com",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://github.com/yoanm/Behat3SymfonyExtension/issues"
  },
  "provide": {
    "yoanm/behat-utils-extension": "~0.1"
  },
  "suggest": {
    "behat/mink-extension": "~2.0",
    "behat/mink-browserkit-driver":  "~1.0"
  },
  "autoload": {
    "psr-0": {
      "Yoanm\\Behat3SymfonyExtension": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests",
      "Technical\\": "tests/Technical",
      "Functional\\": "tests/Functional",
      "FunctionalTest\\Context\\": "app_test/features/bootstrap/"
    }
  },
  "require": {
    "php": ">=5.5",
    "yoanm/behat-utils-extension": "~0.1",
    "behat/behat": "~3.0",
    "symfony/framework-bundle": "~2.7|~3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.0",
    "squizlabs/php_codesniffer": "2.*",
    "behat/mink-extension": "~2.0",
    "behat/mink-browserkit-driver":  "~1.0"
  },
  "scripts": {
    "test": [
      "@t-test",
      "@f-test"
    ],
    "f-test": [
      "./vendor/bin/phpunit --colors=auto --testsuite functional",
      "cd app_test && ../vendor/bin/behat --no-snippets --strict --colors --format progress"
    ],
    "t-test": [
      "./vendor/bin/phpunit --colors=auto --testsuite technical"
    ],
    "cs": [
      "./vendor/bin/phpcs"
    ],
    "coverage-clover": [
      "./vendor/bin/phpunit --coverage-clover coverage/clover.xml"
    ],
    "coverage": [
      "./vendor/bin/phpunit --coverage-html coverage"
    ]
  }
}
