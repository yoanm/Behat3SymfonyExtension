{
    "name":         "yoanm/behat3-symfony-extension",
    "description":  "Symfony extension for Behat V3",
    "keywords":     ["Behat3", "Symfony"],
    "type":         "library",
    "version": "0.2.0",
    "authors":      [
        {
            "name":      "yoanm",
            "email":     "yoanm@users.noreply.github.com"
        }
    ],
    "suggest": {
      "behat/mink-extension": "~2.0",
      "behat/mink-browserkit-driver":  "~1.0"
    },
    "require": {
        "php": ">=5.5",
        "behat/behat": "~3.0",
        "monolog/monolog": "~1.0",
        "symfony/framework-bundle": "~2.7|~3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "squizlabs/php_codesniffer": "2.*",
        "behat/mink-extension": "~2.0",
        "behat/mink-browserkit-driver":  "~1.0"
    },
    "autoload": {
        "psr-0": {
            "Yoanm\\Behat3SymfonyExtension": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "FunctionalTest\\": "app_test/features/bootstrap/"
        }
    },
    "scripts": {
      "behat": [
        "cd app_test && ../vendor/bin/behat --no-snippets --strict --colors --format progress --profile default-config",
        "cd app_test && ../vendor/bin/behat --no-snippets --strict --colors --format progress --profile custom-config",
        "cd app_test && ../vendor/bin/behat --no-snippets --strict --colors --format progress --profile debug-mode",
        "cd app_test && ../vendor/bin/behat --no-snippets --strict --colors --format progress --profile with-mink"
      ]
    }
}
